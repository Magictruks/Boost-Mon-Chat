{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <div class="card">
		<div class="card-header d-flex justify-content-between align-items-center">
			<h1>Détails du client : {{ customer.id }}</h1>
    {{ include('customer/_delete_form.html.twig') }}
    </div>
		<div class="card-body">
			<form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
				<div class="form-group row">
					<h4 class="col-md-3 col-form-label">Nom - Prénom</h4>
					<div class="col-md-9">
						<p class="form-control-static">{{ customer.name }}</p>
					</div>
				</div>
			</form>
		</div>
	</div>
    <a class="btn btn-primary text-light" href="{{ path('customer_index') }}">Retour</a>
    <a class="btn btn-success text-light" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>
{% endblock %}
