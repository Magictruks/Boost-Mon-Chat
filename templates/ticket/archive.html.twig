{% extends 'base.html.twig' %}

{% block title %}Ticket Archive
{% endblock %}

{% block body %}
	<div class="card">
		<div
			class="card-header d-flex justify-content-between align-items-center">
			{# <i class="fa fa-align-justify"></i> #}
			<h1>Table Tickets - Archive</h1>
		</div>

		<div class="card-body">
			<table class="table table-bordered table-responsive-sm table-striped">
				<thead>
					<tr>
						<th>Label</th>
						<th>Description</th>
						<th>Status</th>
						<th>Auteur</th>
						{% if app.user.roles[0] == 'ROLE_ADMIN'%}
							<th>Action</th>
						{% endif %}
					</tr>
				</thead>
				<tbody>
					{% for ticket in tickets %}
						<tr>
							<td>{{ ticket.label }}</td>
							<td>{{ ticket.description }}</td>
							<td>
								{% if ticket.status == 'new' %}
									<span class="badge badge-danger">Nouveau</span>
								{% elseif ticket.status == 'in progress' %}
									<span class="badge badge-warning">En cours</span>
								{% elseif ticket.status == 'archive' and app.user.roles[0] == 'ROLE_ADMIN' %}
									<span class="badge badge-info">Archivé</span>
								{% else %}
									<span class="badge badge-success">Terminé</span>

								{% endif %}
								{# <span class="badge badge-danger">{{ ticket.status ? 'Yes' : 'No' }}</span> #}
							</td>
							<td>{{ ticket.user }}</td>
							{% if app.user.roles[0] == 'ROLE_ADMIN'%}
								<td>
									<a href="{{ path('ticket_show', {id: ticket.id}) }}">
										<i class="cil-zoom"></i>
									</a>
									<a href="{{ path('ticket_edit', {id: ticket.id}) }}">
										<i class="cil-loop-circular"></i>
									</a>
								</td>
							{% endif %}
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link" href="#">Prev</a>
				</li>
				<li class="page-item active">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">3</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">4</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">Next</a>
				</li>
			</ul>
		</div>
	</div>
