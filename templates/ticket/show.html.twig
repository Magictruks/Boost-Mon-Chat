{% extends 'base.html.twig' %}

{% block title %}Ticket
{% endblock %}

{% block body %}
	<h1>Details du
		{{ controller_name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ ticket.id }}</td>
			</tr>
			<tr>
				<th>Label</th>
				<td>{{ ticket.label }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ ticket.description }}</td>
			</tr>
			{% if controller_name != 'Tickets' %}
				<tr>
					<th>Status</th>
					<td>{{ ticket.status }}</td>
				</tr>
			{% else %}
				<tr>
					<th>Etat</th>
					<td>{{ ticket.isOpen ? 'Ouvert' : 'Ferm√©' }}</td>
				</tr>
			{% endif %}
		</tbody>
	</table>

	{% if controller_name == 'Tickets' %}
		<a class="btn btn-primary" href="{{ path('ticket_index') }}">Retour</a>

		<a class="btn btn-success" href="{{ path('ticket_edit', {'id': ticket.id}) }}">Modifier</a>
	{% else %}
		<a class="btn btn-primary" href="{{ path('demande_index') }}">Retour</a>

		<a class="btn btn-success" href="{{ path('demande_edit', {'id': ticket.id}) }}">Modifier</a>
	{% endif %}
	{{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
