<div class="c-sidebar c-sidebar-dark c-sidebar-fixed c-sidebar-lg-show" id="sidebar">
	<div class="c-sidebar-brand d-lg-down-none">
		<svg class="c-sidebar-brand-full" width="118" height="46" alt="CoreUI Logo">
			<use xlink:href="assets/brand/coreui.svg#full"></use>
		</svg>
		<svg class="c-sidebar-brand-minimized" width="46" height="46" alt="CoreUI Logo">
			<use xlink:href="assets/brand/coreui.svg#signet"></use>
		</svg>
	</div>
	<ul class="c-sidebar-nav">
		{% if app.user.roles[0] == 'ROLE_ADMIN' %}
			<li class="c-sidebar-nav-item">
				<a class="c-sidebar-nav-link" href="{{ path('dashboard') }}">
					<svg class="c-sidebar-nav-icon">
						<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-speedometer"></use>
					</svg>
					Dashboard<span class="badge badge-info">NEW</span>
				</a>
			</li>
		{% endif %}
		{% if app.user.roles[0] == 'ROLE_ADMIN' %}
			<li class="c-sidebar-nav-title">Admin</li>
			<li class="c-sidebar-nav-item">
				<a class="c-sidebar-nav-link" href="{{ path('user_index') }}">
					<svg class="c-sidebar-nav-icon">
						<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-drop"></use>
					</svg>
					Utilisateur</a>
			</li>
			<li class="c-sidebar-nav-item">
				<a class="c-sidebar-nav-link" href="{{ path('customer_index') }}">
					<svg class="c-sidebar-nav-icon">
						<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-pencil"></use>
					</svg>
					Client</a>
			</li>
			<li class="c-sidebar-nav-item">
				<a class="c-sidebar-nav-link" href="{{ path('company_index') }}">
					<svg class="c-sidebar-nav-icon">
						<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-pencil"></use>
					</svg>
					Entreprise</a>
			</li>
			<li class="c-sidebar-nav-title">Tickets</li>
			<li class="c-sidebar-nav-item">
				<a class="c-sidebar-nav-link" href="{{ path('ticket_index') }}">
					<svg class="c-sidebar-nav-icon">
						<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-drop"></use>
					</svg>
					Ticket</a>
			</li>
		{% endif %}
		<li class="c-sidebar-nav-title">Demandes</li>
		<li class="c-sidebar-nav-item">
			<a class="c-sidebar-nav-link" href="{{ path('demande_index') }}">
				<svg class="c-sidebar-nav-icon">
					<use xlink:href="node_modules/@coreui/icons/sprites/free.svg#cil-drop"></use>
				</svg>
				Demande</a>
		</li>
	</ul>
	<button class="c-sidebar-minimizer c-class-toggler" type="button" data-target="_parent" data-class="c-sidebar-minimized"></button>
</div>
