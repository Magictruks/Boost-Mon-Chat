{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <div class="card">
		<div
			class="card-header d-flex justify-content-between align-items-center">
			{# <i class="fa fa-align-justify"></i> #}
			<h1>Table Entreprise</h1>
			<a href="{{ path('company_new') }}">
				<button type="button" class="btn btn-success">Ajouter une Entreprise</button>
			</a>
		</div>

		<div class="card-body">
			<table class="table table-bordered table-responsive-sm table-striped">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% for company in companies %}
						<tr>
							<td>{{ company.name }}</td>
							<td>
								<a href="{{ path('company_show', {id: company.id}) }}">
									<i class="cil-zoom"></i>
								</a>
								<a href="{{ path('company_edit', {id: company.id}) }}">
									<i class="cil-loop-circular"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link" href="#">Prev</a>
				</li>
				<li class="page-item active">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">3</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">4</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">Next</a>
				</li>
			</ul>
		</div>
	</div>
{% endblock %}
